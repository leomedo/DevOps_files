FROM debian:bullseye-slim

ENV DEBIAN_FRONTEND=noninteractive
ENV PATH="/home/frappe/.local/bin:$PATH"

# ØªØ«Ø¨ÙŠØª Ø§Ù„Ø­Ø²Ù… Ø§Ù„Ù„Ø§Ø²Ù…Ø© Ù„Ù„ØªØ´ØºÙŠÙ„
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    nodejs \
    npm \
    cron \
    nginx \
    supervisor \
    wkhtmltopdf \
    curl \
    git \
    libssl-dev \
    libffi-dev \
    libmariadb-dev \
    gnupg \
    && curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | apt-key add - \
    && echo "deb https://dl.yarnpkg.com/debian/ stable main" | tee /etc/apt/sources.list.d/yarn.list \
    && apt-get update && apt-get install -y yarn \
    && apt-get clean
RUN npm install -g yarn
# Ø¥Ø¶Ø§ÙØ© Ù…Ø³ØªØ®Ø¯Ù… frappe
RUN useradd -m -s /bin/bash frappe

# Ù†Ø³Ø® Ù…Ù„ÙØ§Øª bench Ù…Ù† Ù…Ø±Ø­Ù„Ø© Ø§Ù„Ø¨Ù†Ø§Ø¡
COPY --from=builder /home/frappe /home/frappe

# ØªØ¹ÙŠÙŠÙ† Ø§Ù„ØµÙ„Ø§Ø­ÙŠØ§Øª
RUN chown -R frappe:frappe /home/frappe

USER frappe
WORKDIR /home/frappe/frappe-bench

# ØªØ«Ø¨ÙŠØª Ù…ØªØ·Ù„Ø¨Ø§Øª Python
RUN pip3 install -r requirements.txt

# Ø¨Ù†Ø§Ø¡ Ø§Ù„Ù…Ù„ÙØ§Øª Ø§Ù„Ø£Ù…Ø§Ù…ÙŠØ© (frontend)
RUN bench build --production

# ÙØªØ­ Ø§Ù„Ø¨ÙˆØ±ØªØ§Øª Ø§Ù„Ù„Ø§Ø²Ù…Ø©
EXPOSE 8000 9000

# Ø§Ù„Ø£Ù…Ø± Ø§Ù„Ø§ÙØªØ±Ø§Ø¶ÙŠ
