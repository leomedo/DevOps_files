FROM python:3.10-slim as builder

ENV DEBIAN_FRONTEND=noninteractive
ENV PATH="/home/frappe/.local/bin:$PATH"

# ØªØ«Ø¨ÙŠØª Ø§Ù„Ù…ØªØ·Ù„Ø¨Ø§Øª Ø§Ù„Ø£Ø³Ø§Ø³ÙŠØ©
RUN apt-get update && apt-get install -y \
